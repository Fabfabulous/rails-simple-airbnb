<h1>All our flats</h1>
<p>All our <%= @flats.count %> flats</p>

<div class="container">
  <div class="cards">
    <% @flats.each do | flat | %>
      <div class="card">
        <%= image_tag("flat_interior.jpg", alt: "Flat interior", class: "image-preview") %>
        <div class="card-title">
          <h4><%= flat.name %></h4>
          <p><%= flat.address %></p>
        </div>
        <div class="card-info">
          <div class = "d-flex">
            <i class="fa-solid fa-people-group"></i>
            <p> <%= flat.number_of_guests %></p>
          </div>
          <div class = "d-flex">
            <i class="fa-solid fa-euro-sign"></i>
            <p><%= flat.price_per_night %></p>
          </div>
        </div>
        <div class="card-bottom">
          <div>
            <%= link_to "More info", flat_path(flat), class: "btn btn-primary btn-sm" %>
          </div>
          <div>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-primary btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
